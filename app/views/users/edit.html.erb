  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました
            <% @user.errors.full_messages.each do |message| %>
            <%= message %>
            <% end %>
          <% end %>

        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name ,class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label><br>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="introduction">Introduction</label><br>
          <%= f.text_area :introduction ,class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User',class:"btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
